{
  "name": "Clickable words",
  "version": "1.0",
  "description": "",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["storage", "activeTab", "declarativeContent"],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png",
    "default_title": "Have a good day"
  }
}